@model DoAnCoSo.Models.PhuongTienVanChuyen

@{
    ViewData["Title"] = "Chỉnh sửa phương tiện vận chuyển";
}

<div class="container mt-4">
    <h2>Chỉnh sửa phương tiện vận chuyển</h2>

    <div class="card">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0">Thông tin phương tiện</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaPhuongTien" />

                <div class="mb-3">
                    <label asp-for="LoaiPhuongTien" class="form-label">Loại phương tiện</label>
                    <input asp-for="LoaiPhuongTien" class="form-control" placeholder="Nhập loại phương tiện" />
                    <span asp-validation-for="LoaiPhuongTien" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrongTai" class="form-label">Trọng tải (kg)</label>
                    <input asp-for="TrongTai" class="form-control" placeholder="Nhập trọng tải" type="number" min="0" step="0.1" />
                    <span asp-validation-for="TrongTai" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-warning">Cập nhật</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 