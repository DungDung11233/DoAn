@model DoAnCoSo.Models.DonHang

<h2>Thêm đơn hàng</h2>

<form asp-action="Add" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="TongSoTien" class="control-label"></label>
        <input asp-for="TongSoTien" class="form-control" />
        <span asp-validation-for="TongSoTien" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiaChiGiaoHang" class="control-label"></label>
        <input asp-for="DiaChiGiaoHang" class="form-control" />
        <span asp-validation-for="DiaChiGiaoHang" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GhiChu" class="control-label"></label>
        <textarea asp-for="GhiChu" class="form-control"></textarea>
        <span asp-validation-for="GhiChu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Thêm</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}