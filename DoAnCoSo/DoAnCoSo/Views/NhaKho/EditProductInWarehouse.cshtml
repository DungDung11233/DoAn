@model DoAnCoSo.Models.ChiTietKhoHang

@{
    ViewData["Title"] = "Sửa Sản Phẩm Trong Kho";
}

<div class="container mt-4">
    <h2 class="text-center text-primary">Sửa Sản Phẩm Trong Kho</h2>
    <form asp-action="EditProductInWarehouse" method="post">
        <input type="hidden" asp-for="MaNhaKhoID" />
        <input type="hidden" asp-for="MaSanPhamID" />
        <div class="mb-3">
            <label asp-for="MaSanPhamID" class="form-label">Sản Phẩm</label>
            <select asp-for="MaSanPhamID" class="form-select" asp-items="ViewBag.SanPhams" disabled></select>
        </div>
        <div class="mb-3">
            <label asp-for="SoLuong" class="form-label">Số Lượng</label>
            <input asp-for="SoLuong" class="form-control" readonly />
            <span asp-validation-for="SoLuong" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NgayNhap" class="form-label">Ngày Nhập</label>
            <input asp-for="NgayNhap" class="form-control" type="date" />
            <span asp-validation-for="NgayNhap" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Lưu</button>
        <a asp-action="Details" asp-route-id="@Model.MaNhaKhoID" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}