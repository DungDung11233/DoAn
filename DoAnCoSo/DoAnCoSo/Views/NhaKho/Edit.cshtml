@model DoAnCoSo.Models.NhaKho

@{
    ViewData["Title"] = "Sửa Nhà Kho";
}

<div class="container mt-4">
    <h2 class="text-center text-primary">Sửa Nhà Kho</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="MaNhaKho" />
        <div class="mb-3">
            <label asp-for="TenNhaKho" class="form-label">Tên Nhà Kho</label>
            <input asp-for="TenNhaKho" class="form-control" />
            <span asp-validation-for="TenNhaKho" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DiaChi" class="form-label">Địa Chỉ</label>
            <input asp-for="DiaChi" class="form-control" />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LoaiKho" class="form-label">Loại Kho</label>
            <input asp-for="LoaiKho" class="form-control" />
            <span asp-validation-for="LoaiKho" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}