@model DoAnCoSo.Models.GiamGia

@{
    ViewData["Title"] = "Cập nhật mã giảm giá";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="MaGiamGia" />
	<div class="form-group">
		<label asp-for="Code"></label>
		<input asp-for="Code" class="form-control" />
		<span asp-validation-for="Code" class="text-danger"></span>

    <div class="form-group">
        <label asp-for="SoLuong"></label>
        <input asp-for="SoLuong" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiamTheoSoTien"></label>
        <input asp-for="GiamTheoSoTien" class="form-control" />
        <span asp-validation-for="GiamTheoSoTien" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiamTheoPhanTram"></label>
        <input asp-for="GiamTheoPhanTram" class="form-control" />
        <span asp-validation-for="GiamTheoPhanTram" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgayApDung"></label>
        <input asp-for="NgayApDung" class="form-control" type="date" />
        <span asp-validation-for="NgayApDung" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoLanToiDaDungMa"></label>
        <input asp-for="SoLanToiDaDungMa" class="form-control" />
        <span asp-validation-for="SoLanToiDaDungMa" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
